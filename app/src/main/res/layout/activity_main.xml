<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray100"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/btn_main_saveInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_primary"
        android:text="@string/main_saveinformation"
        app:backgroundTint="@null"
        android:layout_alignParentBottom="true"
     />

    <TextView
        android:id="@+id/tv_main_appName"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="14dp"
        />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/btn_main_saveInformation"
    android:layout_below="@id/tv_main_appName">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="170dp"
            android:layout_height="44dp"
            android:layout_marginTop="32dp"
            android:text="@string/main_provinceCity"
            android:textColor="@color/gray600"
            android:textSize="26dp"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_main_ui" />

        <CheckBox
            android:id="@+id/checkBox_main_ui"
            android:layout_width="132dp"
            android:layout_height="48dp"
            android:text="@string/main_uidesign"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_main_deepLearning" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/main_fullName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile_image" />

        <TextView
            android:id="@+id/main_fullName"
            android:layout_width="107dp"
            android:layout_height="23dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            tools:text="user" />

        <Button
            android:id="@+id/main_editProfile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/background_button_primary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/main_editProfie"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toStartOf="@+id/viewWeb_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_fullName" />

        <Button
            android:id="@+id/viewWeb_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/background_button_secendary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/main_viewWebsite"
            android:textColor="@color/black"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/main_editProfile_btn"
            app:layout_constraintTop_toTopOf="@+id/main_editProfile_btn" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="62dp"
            android:layout_height="31dp"
            android:layout_marginTop="24dp"
            android:text="@string/main_skills"
            android:textColor="@color/gray600"
            android:textSize="26dp"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/main_editProfile_btn" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="26dp"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/checkBox_main_android"
            android:layout_width="175dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/main_android"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <CheckBox
            android:id="@+id/checkBox_main_deepLearning"
            android:layout_width="132dp"
            android:layout_height="48dp"
            android:text="@string/main_deeplearning"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_main_android" />

        <RadioGroup
            android:id="@+id/radioGroup_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <RadioButton
                android:id="@+id/rb_alborz"
                android:layout_width="117dp"
                android:layout_height="48dp"
                android:text="@string/alborzkaraj"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/rb_gilan" />

            <RadioButton
                android:id="@+id/rb_gilan"
                android:layout_width="116dp"
                android:layout_height="48dp"
                android:text="@string/gilanRAsht"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/rb_tehran" />

            <RadioButton
                android:id="@+id/rb_tehran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/tehrran"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

</RelativeLayout>